<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MoviesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-black"
        android:text="Movies"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_RegisterMovie"
        android:layout_width="272dp"
        android:layout_height="56dp"
        android:layout_marginTop="52dp"
        android:onClick="clickRegisterMovie"
        android:text="Register Movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MoviesTitle" />

    <Button
        android:id="@+id/btn_DisplayMovies"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:onClick="clickDisplayMovies"
        android:text="Display Movies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_RegisterMovie" />

    <Button
        android:id="@+id/btn_Favourites"
        android:layout_width="274dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:onClick="clickFavourites"
        android:text="Favourites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_DisplayMovies" />

    <Button
        android:id="@+id/btn_EditMovies"
        android:layout_width="272dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:onClick="clickEditMovies"
        android:text="Edit Movies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Favourites" />

    <Button
        android:id="@+id/btn_Search"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:onClick="clickSearch"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_EditMovies" />

    <Button
        android:id="@+id/btn_Ratings"
        android:layout_width="268dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:onClick="clickRatings"
        android:text="Ratings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Search" />
</androidx.constraintlayout.widget.ConstraintLayout>